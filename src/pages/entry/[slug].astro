---
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";
import { TagList } from "@/components/organisms/tag-list";
import MainLayout from "@/layouts/MainLayout.astro";
import { TITLE } from "@/config";
import { toPlainText } from "@/utils/markdownUtils";
import { css, blockStyle, h2Style, articleRoot } from "@/components/organisms/markdown-renderer/index.css";

export const getStaticPaths = (async () => {
  const allPosts = await getCollection("blog");

  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { data, body } = post;

// Handle draft posts in production
if (import.meta.env.PROD && data.draft) {
  return new Response(null, { status: 404 });
}

const formattedDate = new Date(data.date).toISOString().split("T")[0];
const pageTitle = `${data.title} - ${TITLE}`;
const description = toPlainText(body).slice(0, 120);

// Render MDX content
const { Content } = await post.render();
---

<MainLayout
  title={pageTitle}
  description={description}
  ogType="article"
  pathname={Astro.url.pathname}
>
  <div class={css}>
    <div class={blockStyle}>
      {formattedDate && <small>{formattedDate}</small>}
      <h2 class={h2Style}>{data.title}</h2>
      {data.tags.length > 0 && <TagList tags={data.tags} />}
    </div>
    <article class:list={[blockStyle, articleRoot]}>
      <Content />
    </article>
  </div>
</MainLayout>
