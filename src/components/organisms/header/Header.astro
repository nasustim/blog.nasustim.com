---
import Link from '@/components/atoms/link/Link.astro';
import { SITE_ORIGIN, SUB_TITLE, TITLE } from '@/config';
import {
  containerStyle,
  h1Style,
  h2Style,
  linkListStyle,
  linkStyle,
  titleStyle,
} from './index.css';

interface Props {
  isTopPage?: boolean;
}

const { isTopPage = false } = Astro.props;
const homeUrl = new URL(!isTopPage ? '/' : '/#', SITE_ORIGIN);
const aboutUrl = new URL('/', 'https://nasustim.com');
---

<header class={containerStyle}>
  <div class={titleStyle}>
    <Link to={homeUrl} noStyle={true}>
      <h1 class={h1Style}>{TITLE}</h1>
      <h2 class={h2Style}>{SUB_TITLE}</h2>
    </Link>
  </div>
  <div class={linkListStyle}>
    <Link to={aboutUrl}>
      <span class={linkStyle}>[ABOUT ME]</span>
    </Link>
  </div>
</header>
